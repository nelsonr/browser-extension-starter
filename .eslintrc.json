{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "array-bracket-newline": [
            "error",
            "consistent"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "array-element-newline": [
            "error",
            "consistent"
        ],
        "indent": [
            "warn",
            4,
            {
                "ignoredNodes": [
                    "VariableDeclaration[declarations.length=0]"
                ]
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true
            }
        ],
        "newline-before-return": "error",
        "object-curly-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "object-property-newline": "error",
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "next": "block-like",
                "prev": "*"
            },
            {
                "blankLine": "always",
                "next": "*",
                "prev": "block-like"
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ]
    }
}
